<%- include('partials/header') %>

<section class="pt-32 pb-12 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Whiz POS Mobile (Cashier App)</h1>
        <p class="text-xl text-gray-600">Efficiency on the Go.</p>
    </div>
</section>

<section class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
       <div class="bg-white p-8 rounded-2xl border border-gray-200 shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-emerald-500 mb-6"><rect width="14" height="20" x="5" y="2" rx="2" ry="2"/><path d="M12 18h.01"/></svg>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Download for Android</h2>
           <a href="<%= env.NEXT_PUBLIC_DOWNLOAD_LINK_APK %>" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-emerald-500 hover:bg-emerald-600 w-full sm:w-auto">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" x2="12" y1="15" y2="3"/></svg> Download Android APK - v5.2.0
          </a>
          <p class="text-xs text-gray-500 mt-4">Requirements: Android 8.0+, Camera permission (for QR scanning).</p>
       </div>
    </div>
</section>

<section class="py-20 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
       <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">How to Connect</h2>

       <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="bg-gray-50 p-6 rounded-xl border border-gray-200 text-center">
             <div class="w-12 h-12 bg-white border border-gray-200 rounded-full flex items-center justify-center mx-auto mb-4 text-blue-600 font-bold text-xl">1</div>
             <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-gray-400 mb-4"><path d="M12 20h.01"/><path d="M2 8.82a15 15 0 0 1 20 0"/><path d="M5 12.859a10 10 0 0 1 14 0"/><path d="M8.5 16.429a5 5 0 0 1 7 0"/></svg>
             <h3 class="text-lg font-bold text-gray-900 mb-2">Connect WiFi</h3>
             <p class="text-gray-600 text-sm">Ensure your phone is on the same WiFi network as the Windows POS.</p>
          </div>
           <div class="bg-gray-50 p-6 rounded-xl border border-gray-200 text-center">
             <div class="w-12 h-12 bg-white border border-gray-200 rounded-full flex items-center justify-center mx-auto mb-4 text-blue-600 font-bold text-xl">2</div>
             <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-gray-400 mb-4"><rect width="20" height="14" x="2" y="3" rx="2"/><line x1="8" x2="16" y1="21" y2="21"/><line x1="12" x2="12" y1="17" y2="21"/></svg>
             <h3 class="text-lg font-bold text-gray-900 mb-2">Find QR Code</h3>
             <p class="text-gray-600 text-sm">Open Whiz POS Desktop -> Settings -> Mobile Sync to view the QR Code.</p>
          </div>
           <div class="bg-gray-50 p-6 rounded-xl border border-gray-200 text-center">
             <div class="w-12 h-12 bg-white border border-gray-200 rounded-full flex items-center justify-center mx-auto mb-4 text-blue-600 font-bold text-xl">3</div>
             <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-gray-400 mb-4"><rect width="16" height="16" x="4" y="4" rx="2"/><path d="M9 9h.01"/><path d="M15 9h.01"/><path d="M9 15h.01"/><path d="M15 15h.01"/></svg>
             <h3 class="text-lg font-bold text-gray-900 mb-2">Scan & Sync</h3>
             <p class="text-gray-600 text-sm">Open the Mobile App and scan the QR Code to connect instantly.</p>
          </div>
       </div>
    </div>
</section>

<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
       <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Mobile Features</h2>
       <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% const mobileFeatures = [
            { title: 'Login Screen', img: '/assets/Screenshot_20251214_194245_Whiz_Pos.jpg' },
            { title: 'Product Grid', img: '/assets/Screenshot_20251214_194303_Whiz_Pos.jpg' },
            { title: 'Checkout', img: '/assets/Screenshot_20251214_194326_Whiz_Pos.jpg' }
          ] %>
          <% mobileFeatures.forEach(item => { %>
             <div class="group relative aspect-[9/16] overflow-hidden rounded-xl border border-gray-200 shadow-sm hover:shadow-lg transition-shadow">
                <img src="<%= item.img %>" alt="<%= item.title %>" class="w-full h-full object-cover transition-transform group-hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end p-6">
                   <span class="text-white font-bold"><%= item.title %></span>
                </div>
             </div>
          <% }) %>
       </div>
    </div>
</section>

<%- include('partials/footer') %>
