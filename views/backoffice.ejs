<%- include('partials/header') %>

<section class="pt-32 pb-12 bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Cloud Back Office</h1>
        <p class="text-xl text-gray-600">Manage Your Business from Anywhere.</p>
    </div>
</section>

<section class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="bg-white p-8 rounded-2xl border border-gray-200 shadow-lg">
           <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-purple-500 mb-6"><path d="M17.5 19c0-3.037-2.463-5.5-5.5-5.5S6.5 15.963 6.5 19 8.963 24.5 12 24.5s5.5-2.463 5.5-5.5z"/><path d="M12 13.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11z" opacity=".5"/></svg>
           <h2 class="text-2xl font-bold text-gray-900 mb-4">Access Dashboard</h2>
           <p class="text-gray-600 mb-8">Requires an active internet connection.</p>

           <% if (user && user.status === 'approved' && user.backOfficeLink) { %>
              <div>
                  <a href="<%= user.backOfficeLink %>" target="_blank" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">Login to Dashboard</a>
                  <div class="mt-4 text-sm text-gray-600">
                      <p>Username: <span class="text-gray-900 font-mono select-all bg-gray-100 px-2 py-1 rounded"><%= user.backOfficeUsername %></span></p>
                      <p class="mt-2">Password: <span class="text-gray-900 font-mono select-all bg-gray-100 px-2 py-1 rounded"><%= user.backOfficePassword %></span></p>
                  </div>
              </div>
           <% } else { %>
              <div>
                 <% if (user) { %>
                    <button disabled class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-gray-400 cursor-not-allowed">Login to Dashboard</button>
                    <p class="text-xs text-gray-500 mt-4">You must be a verified user to access your dashboard link.</p>
                 <% } else { %>
                    <a href="/login" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700">Login to Dashboard</a>
                 <% } %>
              </div>
           <% } %>
        </div>
    </div>
</section>

<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
       <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
           <div class="text-center">
               <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-blue-600 mb-4"><line x1="12" x2="12" y1="20" y2="10"/><line x1="18" x2="18" y1="20" y2="4"/><line x1="6" x2="6" y1="20" y2="16"/></svg>
               <h3 class="text-xl font-bold text-gray-900 mb-2">Global Analytics</h3>
               <p class="text-gray-600">View combined sales from multiple terminals or branches.</p>
           </div>
           <div class="text-center">
               <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-emerald-500 mb-4"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
               <h3 class="text-xl font-bold text-gray-900 mb-2">Staff Management</h3>
               <p class="text-gray-600">Manage salaries, roles, and performance.</p>
           </div>
           <div class="text-center">
               <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto text-purple-500 mb-4"><path d="m7.5 4.27 9 5.15"/><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22v-9"/></svg>
               <h3 class="text-xl font-bold text-gray-900 mb-2">Advanced Inventory</h3>
               <p class="text-gray-600">Bulk upload products, manage suppliers.</p>
           </div>
       </div>
    </div>
</section>

<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
       <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">Interface Preview</h2>
       <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% const boFeatures = [
            { title: 'Analytics', img: '/assets/back_office_sales_view.jpg' },
            { title: 'Employee Management', img: '/assets/user_management_back_office.jpg' },
            { title: 'Inventory List', img: '/assets/back_office_inventory_page.jpg' },
          ] %>
          <% boFeatures.forEach(feature => { %>
            <div class="bg-white rounded-xl overflow-hidden border border-gray-200 shadow-sm hover:shadow-md transition-shadow">
               <div class="h-48 relative bg-gray-100">
                  <img src="<%= feature.img %>" alt="<%= feature.title %>" class="w-full h-full object-cover">
               </div>
               <div class="p-4 text-center">
                  <h3 class="text-lg font-bold text-gray-900"><%= feature.title %></h3>
               </div>
            </div>
          <% }) %>
       </div>
    </div>
</section>

<%- include('partials/footer') %>
